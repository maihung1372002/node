<div class='mt-4'>
    <h2 class='heading'>Update Course</h2>

    <form method='POST' action='/course/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Course name</label>
            <input
                type='text'
                class='form-control'
                value='{{course.name}}'
                name='name'
            />
        </div>
        <div class='form-group'>
            <label for='decreption'>Decreption</label>
            <textarea
                class='form-control'
                name='decreption'
            >{{course.decreption}}</textarea>
        </div>
        <div class='form-group'>
            <label for='videoId'>Video</label>
            <input
                type='text'
                class='form-control'
                value='{{course.videoId}}'
                name='videoId'
            />
        </div>
        <div class='form-group'>
            <label for='level'>Level</label>
            <input
                type='text'
                class='form-control'
                value='{{course.level}}'
                name='level'
            />
        </div>

        <button type='submit' class='btn btn-primary'>Save</button>
    </form>
</div>