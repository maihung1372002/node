<div class='mt-4'>
    <h2 class='heading'>Post Course</h2>

    <form method='POST' action='/course/store'>
        <div class='form-group'>
            <label for='name'>Course name</label>
            <input type='text' class='form-control' name='name' />
        </div>
        <div class='form-group'>
            <label for='decreption'>Decreption</label>
            <input type='text' class='form-control' name='decreption' />
        </div>
        <div class='form-group'>
            <label for='videoId'>Video</label>
            <input type='text' class='form-control' name='videoId' />
        </div>
        <div class='form-group'>
            <label for='level'>Level</label>
            <input type='text' class='form-control' name='level' />
        </div>

        <button type='submit' class='btn btn-primary'>Submit</button>
    </form>
</div>